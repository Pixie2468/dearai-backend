# App
APP_NAME="Dear AI"
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/dearai

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# LLM â€“ Vertex AI / Gemini
LLM_PROVIDER=vertex
VERTEX_PROJECT=your-gcp-project-id
VERTEX_LOCATION=us-central1
LLM_MODEL=gemini-2.5-flash

# Hume.ai (STT + TTS + Emotion Detection)
STT_PROVIDER=hume
TTS_PROVIDER=hume
HUME_API_KEY=your-hume-api-key
HUME_SECRET_KEY=your-hume-secret-key
HUME_TTS_VOICE=Kora

# Guardrails
GUARDRAILS_ENABLED=true

# Redis Cache (used for RAG response caching)
REDIS_URL=redis://localhost:6380
RAG_CACHE_TTL_SECONDS=3600

# FalkorDB
FALKORDB_URL=redis://localhost:6379
FALKOR_HOST=localhost
FALKOR_PORT=6379
FALKOR_GRAPH=dear_ai

# SarvamAI
SARVAM_API_KEY=...

# Environment
ENVIRONMENT=development
